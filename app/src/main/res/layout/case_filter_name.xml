<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardFilter"
    style="@style/Widget.Material3.CardView.Outlined"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:backgroundTint="@color/selector_card_filter_background"
    android:checkable="true"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    app:cardForegroundColor="@android:color/transparent"
    app:checkedIcon="@android:color/transparent"
    app:strokeColor="@android:color/transparent">

    <TextView
        android:id="@+id/nameFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/gotham_pro"
        tools:text="Name" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/checkIcon"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginHorizontal="8dp"
        android:background="@android:color/transparent"
        android:checkable="true"
        android:clickable="false"
        android:focusable="true"
        android:padding="0dp"
        app:icon="@drawable/selector_radio_task_alt_ic"
        app:iconTint="@color/selector_card_filter_ic" />

</com.google.android.material.card.MaterialCardView>